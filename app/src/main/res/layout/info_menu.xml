<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/citclopshd"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Operation:"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.80"
        android:weightSum="1">

        <TextView
            android:layout_width="439dp"
            android:layout_height="37dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1.Register your profile (Make a Kduino)."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2.Connect to Kduino (Control):"
            android:id="@+id/textView4"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:layout_weight="0.04" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&quot;HC-6 Network&quot;"
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3.Choose option."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:id="@+id/textView6" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"></LinearLayout>

        <TextView
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Note: If there is data to send to DB (Profile created or data from Kduino ) you will recive a notification then connect the phone to Internet."
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
            android:layout_gravity="right" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="See Citclop project:"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_title_material_toolbar"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_URL"
        android:background="#0d5875"
        android:textColor="#eef7ff"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="v.1.0 developed  by Sergio Frutos to CSIC"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_caption_material"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"></LinearLayout>

    <Button
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:background="#0d5875"
        android:contentDescription="@string/abc_shareactionprovider_share_with"
        android:minWidth="300dip"
        android:textColor="#eef7ff"
        android:textStyle="bold"
        android:text="@string/exit"
        android:id="@+id/btn_exit4"
        android:layout_column="18"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
